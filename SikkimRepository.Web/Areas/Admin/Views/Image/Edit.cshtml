                            </div>
                            @Html.TextAreaFor(model => model.PhotoStrs.PhotoNormal, new { @class = "invisible", @id = "DisplayPictureNormal" })
                            @Html.TextAreaFor(model => model.PhotoStrs.PhotoThumb, new { @class = "invisible", @id = "DisplayPictureThumb" })
