@model SikkimRepository.Entities.CustomModels.CaseStudyManageModel

<div class="single-blog-details mb-3">
    <div class="author-comment">
        @if (Model.GenCaseStudies.CaseStudyList.Count() > 0)
        {
            foreach (var item in Model.GenCaseStudies.CaseStudyList)
            {
                <ul>
                    <li class="border border-bottom-success">
                        <div class="row">
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                <div class="image-comments"><i class="fa fa-file-pdf fa-5x"></i></div>
                            </div>
                            <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                <span class="reply">
                                    <span class="date"><i class="fa fa-calendar" aria-hidden="true"></i> @item.CaseStudyDate.ToString("dd MMM yyyy")</span>
                                    <span class="ml-1"><a href="@item.CaseStudyFilePath" target="_blank"><i class="fa fa-search" aria-hidden="true"></i> View PDF</a></span>
                                </span>
                                <div class="dsc-comments">
                                    <span class="course-category"><a href="#">@item.ComponentName <small>> @item.SubComponentName</small></a></span>
                                    <h4>@item.CaseStudyTitle</h4>
                                    <span class="more">@item.CaseStudyDesc</span>
                                    @*<a href="#"> Read More</a>*@
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            }

        }
        else
        {
            <h3>No record found..</h3>
        }
    </div>
    <input type="hidden" name="totalRecords" value="@Model.GenCaseStudies.TotalRecords" />
</div>