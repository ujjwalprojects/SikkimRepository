    Layout = null;
    Response.StatusCode = 404;
}

<html>
<head>
    <title>Error</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="page-wrap d-flex flex-row align-items-center">
        <div class="container">
            <div class="row justify-content-center">
